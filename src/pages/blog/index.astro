---
import PageLayout from '@layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
const posts = (await getCollection('blog')).filter((p) => !p.data.draft).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<PageLayout
  title="Blog â€” Akshay Bajpai"
  description="Technical writing on AI infrastructure, systems design, performance engineering, and building products that ship."
>
  <div class="blog-page">
    <header class="blog-header">
      <h1 class="blog-title">Blog</h1>
      <p class="blog-lead">Technical writing on systems, infrastructure, and engineering discipline.</p>
    </header>
    <ul class="post-list" aria-label="Blog posts">
      {posts.map((post) => (
        <li class="post-item">
          <a href={`/blog/${post.slug}`} class="post-link">
            <span class="post-title">{post.data.title}</span>
            <time class="post-date" datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
            </time>
          </a>
        </li>
      ))}
    </ul>
  </div>
</PageLayout>

<style>
  .blog-page {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: var(--space-24) var(--space-8);
  }
  .blog-header {
    margin-bottom: var(--space-16);
  }
  .blog-title {
    font-family: var(--font-serif);
    font-size: var(--text-5xl);
    font-weight: 400;
    margin: 0 0 var(--space-4);
    color: var(--color-text);
  }
  .blog-lead {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin: 0;
  }
  .post-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .post-item {
    border-bottom: 1px solid var(--color-border);
  }
  .post-link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-4);
    padding: var(--space-6) 0;
    transition: color var(--duration-fast);
  }
  .post-link:hover .post-title {
    color: var(--color-accent);
  }
  .post-title {
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--color-text);
    transition: color var(--duration-fast);
  }
  .post-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    flex-shrink: 0;
  }
</style>
