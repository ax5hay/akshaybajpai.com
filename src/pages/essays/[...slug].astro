---
import { getCollection } from 'astro:content';
import ContentLayout from '@layouts/ContentLayout.astro';

export async function getStaticPaths() {
  const essays = await getCollection('essays', (e) => !e.data.draft);
  return essays.map((essay) => ({ params: { slug: essay.slug }, props: { essay } }));
}

interface Props {
  essay: Awaited<ReturnType<typeof getCollection>>[number];
}
const { essay } = Astro.props;
const { Content } = await essay.render();
---

<ContentLayout
  title={`${essay.data.title} Â· Akshay Bajpai`}
  description={essay.data.description}
  pubDate={essay.data.pubDate}
  canonical={`/essays/${essay.slug}`}
>
  <Content />
</ContentLayout>
