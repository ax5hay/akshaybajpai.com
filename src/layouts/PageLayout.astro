---
import BaseLayout from './BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import ScrollProgress from '@components/ScrollProgress.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  noIndex?: boolean;
  hideHeader?: boolean;
  hideFooter?: boolean;
  mainClass?: string;
}

const { hideHeader = false, hideFooter = false, mainClass, ...baseProps } = Astro.props;
---

<BaseLayout {...baseProps}>
  <ScrollProgress />
  {!hideHeader && <Header />}
  <main id="main-content" class={`page-main${mainClass ? ` ${mainClass}` : ''}`}>
    <slot />
  </main>
  {!hideFooter && <Footer />}
</BaseLayout>
