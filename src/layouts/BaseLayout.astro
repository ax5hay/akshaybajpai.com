---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  noIndex?: boolean;
}

const { title, description, canonical, ogImage, type = 'website', publishedTime, noIndex = false } = Astro.props;
const site = 'https://www.akshaybajpai.com';
const canonicalUrl = canonical ? new URL(canonical, site).href : Astro.url.href;

const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Akshay Bajpai',
  alternateName: ['ax5hay', 'Akshay Bajpai AI'],
  url: site,
  image: `${site}/logo.png`,
  jobTitle: 'AI Architect & Technology Leader',
  description: 'Akshay Bajpai — AI Architect and Technology Leader. Expert in LLMs, RAG pipelines, and scalable AI systems. Published researcher with 97.5% Master\'s distinction in AI & Intelligent Systems.',
  sameAs: ['https://linkedin.com/in/ax5hay', 'https://github.com/ax5hay', 'https://twitter.com/ax5hay'],
  knowsAbout: ['Artificial Intelligence', 'Machine Learning', 'Large Language Models', 'RAG Systems', 'Deep Learning', 'Natural Language Processing', 'System Architecture', 'Technology Leadership'],
  email: 'contact@akshaybajpai.com',
  address: { '@type': 'PostalAddress', addressLocality: 'New Delhi', addressRegion: 'Delhi', addressCountry: 'India' },
};
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Akshay Bajpai | AI Architect & Technology Leader',
  url: site,
  description: 'Akshay Bajpai — AI Architect and Technology Leader. LLMs, RAG systems, intelligent system design. Professional portfolio and neural archive.',
  author: { '@type': 'Person', name: 'Akshay Bajpai' },
  inLanguage: 'en-US',
  potentialAction: { '@type': 'SearchAction', target: `${site}/#contact`, 'query-input': 'required name=search_term_string' },
};
const profilePageSchema = {
  '@context': 'https://schema.org',
  '@type': 'ProfilePage',
  mainEntity: { '@type': 'Person', name: 'Akshay Bajpai', alternateName: 'ax5hay', description: 'AI Architect, Technology Leader, and Published Researcher', image: `${site}/logo.png`, sameAs: ['https://linkedin.com/in/ax5hay', 'https://github.com/ax5hay'] },
};
const image = ogImage ? new URL(ogImage, site).href : new URL('/logo.png', site).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#0a0a0c" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Akshay Bajpai" />
    <meta name="keywords" content="Akshay Bajpai, Akshay Bajpai AI, AI Architect, Machine Learning, LLM, RAG systems, Technology Leader, Published Researcher, ax5hay" />
    {noIndex ? <meta name="robots" content="noindex, nofollow" /> : <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />}
    <meta name="googlebot" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Akshay Bajpai | AI Architect & Technology Leader" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Akshay Bajpai — AI Architect & Technology Leader, LLMs, RAG systems" />
    <meta property="og:locale" content="en_US" />
    {publishedTime && type === 'article' && <meta property="article:published_time" content={publishedTime} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ax5hay" />
    <meta name="twitter:creator" content="@ax5hay" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Fonts: Instrument Serif + IBM Plex Sans (editorial, not previous) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans:wght@400;500;600&family=Instrument+Serif:ital@0;1&display=swap"
      as="style"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans:wght@400;500;600&family=Instrument+Serif:ital@0;1&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans:wght@400;500;600&family=Instrument+Serif:ital@0;1&display=swap"
      />
    </noscript>

    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />
    <link rel="shortcut icon" type="image/png" href="/logo.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(profilePageSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [{ '@type': 'ListItem', position: 1, name: 'Akshay Bajpai', item: site }],
    })} />
  </head>
  <body>
    <script is:inline>
      (function () {
        if (typeof document === 'undefined') return;
        var path = window.location.pathname || '';
        if (path === '/' || path === '/index.html' || path === '') {
          document.body.classList.add('home-hero');
          function update() {
            document.body.classList.toggle('scrolled-past-hero', window.scrollY > window.innerHeight * 0.55);
          }
          window.addEventListener('scroll', update, { passive: true });
          update();
        }
      })();
    </script>
    <slot />
    <script is:inline>
      (function () {
        if (typeof document === 'undefined') return;
        if (window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
        var observer = new IntersectionObserver(function (entries) {
          entries.forEach(function (e) {
            if (e.isIntersecting) e.target.classList.add('reveal-visible');
          });
        }, { rootMargin: '0px 0px -8% 0px', threshold: 0 });
        function run() {
          document.querySelectorAll('[data-reveal], [data-reveal-stagger]').forEach(function (el) {
            observer.observe(el);
          });
        }
        if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', run);
        else run();
      })();
    </script>
  </body>
</html>
