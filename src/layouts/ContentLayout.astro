---
import PageLayout from '@layouts/PageLayout.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  canonical?: string;
  ogImage?: string;
}

const { title, description, pubDate, canonical, ogImage } = Astro.props;
---

<PageLayout
  title={title}
  description={description}
  canonical={canonical}
  ogImage={ogImage}
  type="article"
  publishedTime={pubDate.toISOString()}
>
  <article class="content-article">
    <header class="content-header">
      <h1 class="content-title">{title}</h1>
      <time class="content-date" datetime={pubDate.toISOString()}>
        {pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
    </header>
    <div class="content-body">
      <slot />
    </div>
  </article>
</PageLayout>

<style>
  .content-article {
    max-width: var(--content-narrow);
    margin: 0 auto;
    padding: var(--space-24) var(--space-8);
  }
  .content-header {
    margin-bottom: var(--space-12);
  }
  .content-title {
    font-family: var(--font-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    line-height: var(--leading-tight);
    margin: 0 0 var(--space-4);
    color: var(--color-text);
  }
  .content-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  .content-body {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }
  .content-body :global(p) {
    margin: 0 0 var(--space-6);
    color: var(--color-text-secondary);
  }
  .content-body :global(h2) {
    font-family: var(--font-serif);
    font-size: var(--text-2xl);
    margin: var(--space-12) 0 var(--space-4);
    color: var(--color-text);
  }
  .content-body :global(h3) {
    font-size: var(--text-xl);
    font-weight: 600;
    margin: var(--space-8) 0 var(--space-3);
    color: var(--color-text);
  }
  .content-body :global(ul),
  .content-body :global(ol) {
    margin: 0 0 var(--space-6);
    padding-left: var(--space-8);
    color: var(--color-text-secondary);
  }
  .content-body :global(li) {
    margin-bottom: var(--space-2);
  }
  .content-body :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  .content-body :global(pre),
  .content-body :global(code) {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }
  .content-body :global(pre) {
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    padding: var(--space-6);
    overflow-x: auto;
    margin: 0 0 var(--space-6);
    border-radius: 4px;
  }
  .content-body :global(code) {
    padding: 0.15em 0.4em;
    background: var(--color-bg-surface);
    border-radius: 3px;
  }
  .content-body :global(pre code) {
    padding: 0;
    background: none;
  }
  .content-body :global(blockquote) {
    margin: var(--space-8) 0;
    padding-left: var(--space-6);
    border-left: 3px solid var(--color-accent);
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
