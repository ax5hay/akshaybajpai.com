---
// No previous hero layout. Centered typography, no gradient orbs, no particle clone.
---

<section class="hero" aria-label="Introduction" data-hero>
  <h1 class="hero-title">
    <span class="hero-name">Akshay Bajpai</span>
    <span class="hero-role">Architect of Systems</span>
    <span class="hero-role">Builder of Intelligence</span>
  </h1>
  <p class="hero-sub">A digital mind palace for structured thought.</p>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-8);
    position: relative;
    z-index: 2;
    will-change: transform;
  }
  .hero-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin: 0 0 var(--space-6);
  }
  .hero-name {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 400;
    letter-spacing: 0.02em;
    color: var(--color-text);
    line-height: var(--leading-tight);
  }
  .hero-role {
    font-family: var(--font-sans);
    font-size: clamp(0.875rem, 2.5vw, 1rem);
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-top: var(--space-2);
  }
  .hero-sub {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    letter-spacing: 0.1em;
    margin: 0;
  }
  @media (prefers-reduced-motion: reduce) {
    .hero { will-change: auto; }
  }
</style>

<script>
  (function () {
    const hero = document.querySelector('[data-hero]');
    if (!hero) return;
    var ticking = false;
    function update() {
      if (ticking) return;
      ticking = true;
      requestAnimationFrame(function () {
        var y = window.scrollY;
        var vh = window.innerHeight;
        var t = Math.max(0, 1 - y / (vh * 0.6));
        hero.style.transform = 'translateY(' + (y * 0.2) + 'px) scale(' + (0.97 + t * 0.03) + ')';
        hero.style.opacity = String(0.7 + t * 0.3);
        ticking = false;
      });
    }
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
    window.addEventListener('scroll', update, { passive: true });
    update();
  })();
</script>
