---
const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/work', label: 'Work' },
  { href: '/blog', label: 'Blog' },
  { href: '/essays', label: 'Essays' },
  { href: '/research', label: 'Research' },
  { href: '/architecture', label: 'Architecture' },
  { href: '/contact', label: 'Contact' },
];
const currentPath = Astro.url.pathname;
---

<header class="site-header" role="banner">
  <a href="/" class="logo" aria-label="Home Â· Akshay Bajpai">
    <img src="/logo.png" alt="Akshay Bajpai" width="32" height="32" />
  </a>
  <nav class="nav" aria-label="Primary">
    <ul class="nav-list">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={['nav-link', 'link-hover', { 'nav-link--active': currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
  <button type="button" class="nav-toggle" aria-label="Toggle menu" aria-expanded="false" data-nav-toggle>
    <span class="nav-toggle-bar"></span>
    <span class="nav-toggle-bar"></span>
    <span class="nav-toggle-bar"></span>
  </button>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) var(--space-8);
    background: linear-gradient(180deg, var(--color-bg) 0%, transparent 100%);
    transition: background var(--duration-normal) var(--ease-out-expo);
  }
  .site-header::after {
    content: '';
    position: absolute;
    inset: 0 0 -100% 0;
    pointer-events: none;
    background: var(--gradient-edge);
    opacity: 0;
    transition: opacity var(--duration-normal);
  }
  .site-header.scrolled::after {
    opacity: 1;
  }
  .logo {
    display: flex;
    align-items: center;
    color: var(--color-text);
  }
  .logo img {
    display: block;
    width: 32px;
    height: 32px;
    object-fit: contain;
  }
  .nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: var(--space-8);
  }
  .nav-link {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
    letter-spacing: 0.04em;
    text-transform: uppercase;
    transition: color var(--duration-fast);
  }
  .nav-link:hover,
  .nav-link--active {
    color: var(--color-text);
  }
  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    padding: var(--space-2);
    background: none;
    border: none;
    color: var(--color-text);
  }
  .nav-toggle-bar {
    width: 24px;
    height: 2px;
    background: currentColor;
    transition: transform var(--duration-fast) var(--ease-out-expo);
  }
  @media (max-width: 768px) {
    .nav {
      position: fixed;
      inset: 0;
      background: var(--color-bg);
      padding: var(--space-24) var(--space-8);
      transform: translateX(100%);
      transition: transform var(--duration-normal) var(--ease-out-expo);
    }
    .nav[aria-hidden="false"] {
      transform: translateX(0);
    }
    .nav-list {
      flex-direction: column;
      gap: var(--space-6);
    }
    .nav-link {
      font-size: var(--text-lg);
    }
    .nav-toggle {
      display: flex;
    }
  }
</style>

<script>
  const header = document.querySelector('.site-header');
  const toggle = document.querySelector('[data-nav-toggle]');
  const nav = document.querySelector('.nav');
  if (header) {
    const onScroll = () => header.classList.toggle('scrolled', window.scrollY > 40);
    window.addEventListener('scroll', onScroll, { passive: true });
  }
  if (toggle && nav) {
    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!expanded));
      nav?.setAttribute('aria-hidden', String(expanded));
      document.body.style.overflow = expanded ? '' : 'hidden';
    });
  }
</script>
